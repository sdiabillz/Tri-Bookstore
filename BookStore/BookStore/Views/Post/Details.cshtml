@model BookStore.Models.Posting
@{
    ViewBag.Title = "Post Preview Page";
}

@if (!User.Identity.IsAuthenticated)
{
    <div class="jumbotron">
        <p class="btn btn-default"> @Html.ActionLink("Login", "Login", "Account")</p>      
    </div>
}
else
{
    <div class="jumbotron">
        @using (Html.BeginForm())
        {   @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)
            
            <div class="container">
                <h2 class="text-center">Your Post</h2>
                <form role="form">
                    <div class=" row">
                        <div class="col-xs-6 col-md-4">
                            <div class="form-group">
                                @Html.DisplayNameFor(m => m.PostTitle)
                            </div>
                            <div class="form-group">
                                @Html.DisplayFor(m => m.PostTitle)
                            </div>
                        </div>
                        <div class="col-xs-6 col-md-4">
                            <div class="form-group">
                                @Html.DisplayNameFor(m => m.BookTitle)
                            </div>
                            <div class="form-group">
                                @Html.DisplayFor(m => m.BookTitle)
                            </div>
                        </div>
                        <div class="col-xs-6 col-md-4">
                            <div class="form-group">
                                @Html.DisplayNameFor(m => m.price)
                            </div>
                            <div class="form-group">
                                @Html.DisplayFor(m => m.price)
                            </div>
                        </div>
                    </div>

                    <div class=" row">
                        <div class="col-xs-6 col-md-4">
                            <div class="form-group">
                                @Html.DisplayNameFor(m => m.PostDescription)
                            </div>
                            <div class="form-group">
                                @Html.DisplayFor(m => m.PostDescription)
                            </div>
                        </div>
                        <div class="col-xs-6 col-md-4">
                            <div class="form-group">
                                @Html.DisplayNameFor(m => m.author)
                            </div>
                            <div class="form-group">
                                @Html.DisplayFor(m => m.author)
                            </div>
                        </div>
                        <div class="col-xs-6 col-md-4">
                            <div class="form-group">
                                <div class="form-group">
                                 @*//  @Html.DisplayFor(m =>m. )*@
                                    @*<img src="@Model.img" alt="your image" id="blah" width="100" height="100" />
                                    <img src="@ViewBag.Logo" alt="Logo" />*@  
                                </div>                                  
                            </div>
                        </div>
                    </div>   

                    <div class=" row">
                        <div class="col-xs-6 col-md-4">
                            <div class="form-group">
                                @*// <input type='file' id="imgInp" name="filePlace" />
                                <img id="blah" src=@Model.URL alt="your image" width="100" height="100" />*@
                                @*<img id="blah" src=@Model. alt="your image" width="100" height="100" />*@
                            </div>
                        </div>
                    </div>
                    <p class="btn btn-default">@Html.ActionLink("Back To Posts", "Manage" ,"manage")</p>
             
            </form>
        </div>
        }
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script type="text/javascript">
    function readURL(input) {
        if (input.files && input.files[0]) {
            var reader = new FileReader();

            reader.onload = function (e) {
                $('#blah').attr('src', e.target.result);
            }

            reader.readAsDataURL(input.files[0]);

        }
    }

    $("#imgInp").change(function(){
        readURL(this);
    });
    </script>
}